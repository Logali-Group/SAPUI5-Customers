<mvc:View xmlns:core="sap.ui.core" 
          xmlns:mvc="sap.ui.core.mvc" 
          xmlns="sap.m" 
          controllerName="logaligroup.Customers.controller.Detail"
	      xmlns:html="http://www.w3.org/1999/xhtml"
	      xmlns:valCliente="logaligroup.Customers.control">
	
	<Page title="{i18n>detailPageTitle}"
	      showNavButton="true"
		  navButtonPress=".onNavBack">
		
		<ObjectHeader responsive="true"
		              fullScreenOptimized="true"
		              title="{customerWz>ContactName}">
			<attributes>
				<ObjectAttribute text="{customerWz>Address}"></ObjectAttribute>
				<ObjectAttribute text="{customerWz>City}"></ObjectAttribute>
				<ObjectAttribute text="{customerWz>PostalCode}"></ObjectAttribute>
				<ObjectAttribute text="{customerWz>Country}"></ObjectAttribute>
				<ObjectAttribute text="{customerWz>Phone}"></ObjectAttribute>
			</attributes>
		</ObjectHeader>
		<valCliente:CustomerRating id="rating" class="sapUiSmallMarginBeginEnd" change=".onRatingChange"/>
	</Page>
</mvc:View>